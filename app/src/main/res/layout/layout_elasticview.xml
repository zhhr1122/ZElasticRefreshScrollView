<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorBg"
    >
    <LinearLayout
        android:orientation="vertical"
        android:layout_marginTop="200dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/rl_loading"
            android:background="@color/colorBg"
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <LinearLayout
                android:layout_centerHorizontal="true"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="40dp">
                <ImageView
                    android:id="@+id/iv_loading_top"
                    android:layout_margin="5dp"
                    android:scaleType="fitXY"
                    android:layout_width="30dp"
                    android:layout_height="30dp" />
                <TextView
                    android:textColor="@color/colorTextBlack"
                    android:id="@+id/tv_loading"
                    android:text="努力加载中..."
                    android:gravity="center"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    />
            </LinearLayout>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/ly_meun"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <LinearLayout
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <LinearLayout
                        android:id="@+id/ll_category1"
                        android:background="@color/colorBg"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >
                        <ImageView
                            android:src="@mipmap/home_icon_rank"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/ll_category2"
                        android:background="@color/colorBg"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >
                        <ImageView
                            android:src="@mipmap/home_icon_category"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/ll_category3"
                        android:background="@color/colorBg"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >
                        <ImageView
                            android:src="@mipmap/home_icon_new"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_below="@id/ly_meun"
                android:background="@color/colorIndexbgTextDark"
                android:layout_width="match_parent"
                android:layout_height="2000dp"
                android:id="@+id/recycle_view">
            </View>

        </RelativeLayout>

        <ImageView
            android:layout_centerHorizontal="true"
            android:layout_below="@id/rl_content"
            android:src="@mipmap/bottom"
            android:layout_width="match_parent"
            android:layout_height="400dp"/>
    </LinearLayout>
    <View
        android:background="@color/colorAccent"
        android:id="@+id/B_banner"
        android:layout_width="match_parent"
        android:layout_height="240dp" />
</RelativeLayout>